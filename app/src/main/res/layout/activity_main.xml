<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edtComanda"
        android:hint="Valor da comanda"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtPessoas"
        android:hint="Quantidade de Pessoas"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/chkServico"
        android:textSize="20sp"
        android:text="10% do ServiÃ§o"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="calculaRateio"
        android:text="Calcular Rateio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtRateio"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</LinearLayout>